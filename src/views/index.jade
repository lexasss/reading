-
    var ids = {
        text: 'text',
        textContainer: 'textContainer',
        textEditor: 'textEditor',
        controls: 'controls',
        options: 'options',
        statistics: 'statistics',
        path: 'path'
    };

doctype html
html
    head
        title Reading
        meta(charset="utf-8")
        link(rel='stylesheet', href='app.css')
        script(src='libs/gazeTargets/gazeTargets.js')
        script(src='libs/firebase.js')
        script(src='libs/shortcut.js')

    body
        include ./components/text.jade
        +controls( ids.textContainer, ids.text )

        include ./components/controls.jade
        +controls( ids.controls )

        include ./components/textEditor.jade
        +textEditor( ids.textEditor )

        include ./components/options.jade
        +options( ids.options )

        include ./components/statistics.jade
        +statistics( ids.statistics )

        include ./components/path.jade
        +path( ids.path )

        script(src='app.js')
        script.
            Reading.init({
                text: '##{ids.text}',
                textContainer: '##{ids.textContainer}',
                path: '##{ids.path}',
                controls: '##{ids.controls}',
                options: '##{ids.options}',
                statistics: '##{ids.statistics}',
                textEditor: '##{ids.textEditor}',
            });
